<form class="mt-sm-2 mt-lg-5 p-3 needs-validation" method="POST" action="/register" novalidate>
    <div class="container-fluid align-items-center">
        <div class="form-group row">
            <label for="firstInput" class="col-sm-3 col-auto col-form-label col-form-label-lg">First Name:</label>
            <div class="col-sm-6 col-auto offset-md-1">
                <input type="text" class="form-control form-control-lg" id="firstInput" name="firstInput" pattern="[A-Za-z]{3,64}" placeholder="Enter first name" aria-required="true" required>
            </div>
            <div class="col-sm-4 col-auto">
                <span class="small text-muted">Must contain at least 3 alphabetic characters.</span>
            </div>
        </div>
        <div class="form-group row">
            <label for="lastInput" class="col-sm-3 col-auto col-form-label col-form-label-lg">Last Name:</label>
            <div class="col-sm-6 col-auto offset-md-1">
                <input type="text" class="form-control form-control-lg" id="lastInput" name="lastInput" pattern="[A-Za-z]{3,64}" placeholder="Enter last name" aria-required="true" required>
            </div>
            <div class="col-sm-4 col-auto">
                <span class="small text-muted">Must contain at least 3 alphabetic characters.</span>
            </div>
        </div>
        <div class="form-group row">
            <label for="usernameInput" class="col-sm-3 col-auto col-form-label col-form-label-lg">Username:</label>
            <div class="col-sm-6 col-auto offset-md-1">
                <input type="text" class="form-control form-control-lg" id="usernameInput" name="usernameInput" pattern="[A-Za-z*\d]{5,20}" placeholder="Enter username" aria-required="true" required>
            </div>
            <div class="col-sm-4 col-auto">
                <span class="small text-muted">Must contain at least 5 characters, only alphanumeric (A-Z, 0-9).</span>
            </div>
        </div>
        <div class="form-group row">
            <label for="emailInput" class="col-sm-3 col-auto col-form-label col-form-label-lg">Email:</label>
            <div class="col-sm-6 col-auto offset-md-1">
                <input type="email" class="form-control form-control-lg" id="emailInput" name="emailInput" size="16" minlength="3" maxlength="64" placeholder="Enter email" aria-required="true" required>
            </div>
            <div class="col-sm-4 col-auto">
                <span class="small text-muted">Must be a valid email address.</span>
            </div>
        </div>
        <div class="form-group row">
            <label for="passwordInput" class="col-sm-3 col-form-label col-form-label-lg">Password:</label>
            <div class="col-sm-6 col-auto offset-md-1">
                <input type="password" class="form-control form-control-lg" id="passwordInput" name="passwordInput" pattern="(?=.*\d)(?=.*[!@#$%^&*_=+-])(?=.*[a-z])(?=.*[A-Z]).{6,64}" placeholder="Enter password" aria-required="true" required>
            </div>
            <div class="col-sm-4 col-auto">
                <span class="small text-muted">Must contain at least 1 uppercase charater, 1 lowercase character, 1 number, and 1 special character.</span>
            </div>
        </div>
        <div class="w-100"></div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary mb-2">Sign Up</button>
        </div>
        {{#if error}}
            <div class="alert alert-danger mt-2 mb-1" role="alert">
                <h1 class="alert-heading h6">You had the following error(s):</h1>
                <ul class="list-group list-group-flush">
                    {{#each errors}}
                        <li class="list-group-item bg-transparent">{{this}}</li>
                    {{/each}}
                </ul>
            </div>
        {{/if}}
    </div>
</form>
<br><br>
<div class="text-center text-wrap">
    <a href="/login">Have an account? Click here to sign in!</a>
</div>